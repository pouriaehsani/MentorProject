@using mentorproject.Models
@model GeneralModelView

@{
    foreach (View_courses item in Model.Courses)
    {
        <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
            <div class="course-item">
                <img src="~/AdminAssets/img/ImgCourse/@item.address" class="img-fluid" alt="@item.alt" title="@item.imgTitle">
                <div class="course-content">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <p class="category">@item.category</p>

                    </div>
                    <h3><a href="course-details.html">@item.courseTitle</a></h3>
                    <p class="description">@item.description</p>
                    <div class="trainer d-flex justify-content-between align-items-center">
                        <div class="trainer-profile d-flex align-items-center">
                            <img src="~/AdminAssets/img/ImgTeacher/" class="img-fluid" alt="">
                            <a href="" class="trainer-link">@item.firstname @item.lastname</a>
                        </div>
                        <div class="trainer-rank d-flex align-items-center">
                            <i class="bi bi-person user-icon"></i>&nbsp;50
                            &nbsp;&nbsp;
                            <i class="bi bi-heart heart-icon"></i>&nbsp;65
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- End Course Item-->
    }
}

