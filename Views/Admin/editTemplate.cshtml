
@{
    ViewBag.Title = "editTemplate";
    Layout = "~/Views/shared/_adminLayout.cshtml";
}

<div style="margin-bottom:10px">
    <button class="btn btn-success" onclick="editmode('yes')">ایجاد دکمه ویرایش</button>
    <button class="btn btn-danger" onclick="editmode('no')">لغو دکمه ویرایش</button>
</div>

<iframe id="frame" src="~/home/index" style="width:100% ; height:100vh"></iframe>


@section BeforeScripts{
    <script>
        function editmode(x) {

            $.post("/admin/editmode", { mode: x })

                .done(function (res) {
                    if (res) {

                        document.getElementById('frame').contentWindow.location.reload();
                    }

                });
        }
    </script>
    
    
    }
